    <style>
         @import url('https://fonts.googleapis.com/css2? family= Bitter:ital,wght@1,700 & family= Montserrat:wght@300;400;500;600 & display=swap');
        body{
            background-color:rgb(18, 47, 124) ;
            font-weight: 300;
            font-size: 16px;
            line-height: 1.5;
            overflow-x: hidden;
            font-family: 'Montserrat', sans-serif;
        }
        body::after, body::before{
            content: '';
            position: fixed;
            height: 900px;
            width: 900px;
            border-radius: 50%;
            z-index: -1;
            filter: blur(150px);
            opacity: 0.5;
        }
        body::before{
            background-color: rgb(28, 28, 171);
            left: 0;
            bottom: 0;
            transform: translate(-50%);
        }
        body::after{
            background-color: rgb(62, 3, 118);
            right: 0;
            top: 0;
            transform: translate(50%);
        }
        .circle-1,
        .circle-2,
        .circle-3{
            position: absolute;
            background: linear-gradient(to right, rgb(55, 167, 242), rgb(23, 213, 143));
            border-radius: 50%;
            z-index: -1;
        }
       .circle-1{
            height: 100px;
            width: 100px;
            left: 0;
            top: 10%;
            transform: translateX(300%);
        }
        .circle-2{
            height: 80px;
            width: 80px;
            right: 0;
            bottom: 0;
            transform: translate(-500%);
        }
        .circle-3{
            height: 50px;
            width: 50px;
            right: 10%;
            top: 10%;
            transform: translate(-150%);
        }
