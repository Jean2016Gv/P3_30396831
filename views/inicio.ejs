              <script>
                // Función para cambiar el número de columnas en la cuadrícula
                function changeColumns(columns) {
                  const productContainer = document.querySelector('.contenedor-productos');
                  const gridBtn = document.querySelector('.grid-view-btn');
                  const listBtn = document.querySelector('.list-view-btn');
              
                  // Actualizar la propiedad grid-template-columns
                  productContainer.style.gridTemplateColumns = `repeat(${columns}, 1fr)`;
              
                  // Cambiar la clase del botón activo
                  if (columns === 4) {
                    gridBtn.classList.add('selected');
                    listBtn.classList.remove('selected');
                  } else if (columns === 1) {
                    listBtn.classList.add('selected');
                    gridBtn.classList.remove('selected');
                  }
              
                  // Guardar la selección en localStorage
                  localStorage.setItem('view', columns);
                }
              
                // Función para cargar la vista almacenada en localStorage
                function loadView() {
                  const savedView = localStorage.getItem('view');
                  if (savedView === '4') {
                    changeColumns(4);
                  } else if (savedView === '1') {
                    changeColumns(1);
                  }
                }
              
                // Llamar a loadView() cuando la página se haya cargado completamente
                window.onload = loadView;
              </script>
            
